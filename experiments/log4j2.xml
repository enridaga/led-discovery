<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  	<Logger name="led.discovery.experiments" additivity="false" level="warn">
  		<AppenderRef ref="Console"/>
  	</Logger>
  	<Logger name="led.discovery.annotator" additivity="false" level="info">
  		<AppenderRef ref="Console"/>
  	</Logger>
  	<Logger name="led.discovery.annotator.evaluators" additivity="false" level="trace">
  		<AppenderRef ref="Console"/>
  	</Logger>
  	<Logger name="led.discovery.annotator.LedComponentsAnnotator" additivity="false" level="trace">
  		<AppenderRef ref="Console"/>
  	</Logger>
  	<Logger name="led.discovery.spark" additivity="false" level="warn">
  		<AppenderRef ref="Console"/>
  	</Logger>
  	<Logger name="led.discovery.annotator.window" additivity="false" level="debug">
  		<AppenderRef ref="Console"/>
  	</Logger>
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
