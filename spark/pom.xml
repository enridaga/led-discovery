								<argument>led.discovery.spark.GenTrainingFile</argument>
								<argument>${project.basedir}/../data/positives/</argument>
								<argument>${project.basedir}/../data/negatives-reuters/,${project.basedir}/../data/negatives-red/</argument>
								<argument>${project.basedir}/../data/analysis/training-file-le-neg.csv</argument>
								<argument>0</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>gen-features-terms</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<arguments>
								<argument>-Xmx8g</argument>
								<argument>-classpath</argument>
								<classpath />
								<argument>-Dlog4j.configurationFile=${project.basedir}/src/test/resources/log4j2.xml</argument>
								<argument>led.discovery.spark.GenTermsFeatures</argument>
								<argument>${project.basedir}/../data/analysis/training-file-${training}.csv</argument>
								<argument>${project.basedir}/../data/analysis/features-${training}--${mode}.parquet</argument>
								<argument>${vocabulary}</argument>
								<argument>${vocabsize}</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>gen-features-embedded-terms</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<arguments>
								<argument>-Xmx8g</argument>
								<argument>-classpath</argument>
								<classpath />
								<argument>-Dlog4j.configurationFile=${project.basedir}/src/test/resources/log4j2.xml</argument>
								<argument>led.discovery.spark.GenEmbeddedTermsFeatures</argument>
								<argument>${project.basedir}/../data/analysis/training-file-${training}.csv</argument>
								<argument>${project.basedir}/../data/analysis/features-${training}--${mode}.parquet</argument>
								<argument>${vocabulary}</argument>
								<argument>${vocabsize}</argument>
							</arguments>
						</configuration>
					</execution>
					
					
						<execution>
