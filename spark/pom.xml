								<argument>-Dlog4j.configurationFile=${project.basedir}/src/test/resources/log4j2.xml</argument>
								<argument>led.discovery.spark.WordEmbeddings</argument>
								<argument>${project.basedir}/../data/analysis/features-${expId}.parquet.feat</argument>
								<argument>${project.basedir}/../data/analysis/${expId}-word2vec.model</argument>
							</arguments>
						</configuration>
					</execution>
