								<argument>led.discovery.spark.GenEntitiesFeatures</argument>
								<argument>${project.basedir}/../data/analysis/training-file-${training}.csv</argument>
								<argument>${project.basedir}/../data/analysis/features-${training}--${mode}.parquet</argument>
								<argument>${vocabulary}</argument>
								<argument>${vocabsize}</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>gen-features-types</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<arguments>
								<argument>-Xmx8g</argument>
								<argument>-classpath</argument>
								<classpath />
								<argument>-Dlog4j.configurationFile=${project.basedir}/src/test/resources/log4j2.xml</argument>
								<argument>led.discovery.spark.GenTypesFeatures</argument>
								<argument>${project.basedir}/../data/analysis/training-file-${training}.csv</argument>
								<argument>${project.basedir}/../data/analysis/features-${training}--${mode}.parquet</argument>
								<argument>${vocabulary}</argument>
								<argument>${vocabsize}</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>train-random-forest</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<arguments>
								<argument>-Xmx8g</argument>
								<argument>-classpath</argument>
								<classpath />
								<argument>-Dlog4j.configurationFile=${project.basedir}/src/test/resources/log4j2.xml</argument>
								<argument>led.discovery.spark.TrainRandomForestModel</argument>
								<argument>${project.basedir}/../data/analysis/features-${features}.parquet</argument>
								<argument>${project.basedir}/../data/analysis/model-rf-${features}.parquet</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>train-svm</id>
